<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:orientation="vertical">

    <View
        android:id="@+id/listView_row_difficulty"
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:layout_marginRight="30dp"/>

    <TextView
        android:id="@+id/listView_row_percentage"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:textColor="#757575"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="100%"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/listView_row_difficulty"
        android:layout_toLeftOf="@id/listView_row_percentage">

        <TextView
            android:id="@+id/listView_row_additionalInfo"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="20dp"
            android:textColor="#757575"
            android:text="@string/danger_listView_additionalInfo"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/listView_row_title"
            android:textColor="#000000"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_above="@id/listView_row_additionalInfo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"/>

    </RelativeLayout>
</RelativeLayout>